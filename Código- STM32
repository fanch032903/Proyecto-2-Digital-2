/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
/*Transmitir texto por UART */
void transmit_uart(char *string) {
	uint8_t len = strlen(string);
	HAL_UART_Transmit (&huart2, (uint8_t*)string, len, 200);
}

/*Transmitir buffer por UART */
static uint16_t uart_readline(char *dst, uint16_t maxlen) {
    uint8_t ch;
    uint16_t idx = 0;
    if (maxlen == 0) return 0;
    while (idx < maxlen - 1) {
        if (HAL_UART_Receive(&huart2, &ch, 1, HAL_MAX_DELAY) != HAL_OK) break;
        if (ch == '\r') continue;           // ignora CR
        if (ch == '\n') break;              // fin de línea
        if (ch == 0x08 || ch == 0x7F) {     // backspace
            if (idx > 0) idx--;
            continue;
        }
        dst[idx++] = (char)ch;
    }
    dst[idx] = '\0';
    return idx;
}

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART2_UART_Init();
  MX_SPI1_Init();
  MX_FATFS_Init();
  MX_I2C1_Init();
  /* USER CODE BEGIN 2 */

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
	  //HAL_I2C_Master_Receive(&hi2c1, (deviceAddress << 1) | 0x01, (uint8_t*)RX_I2C, 1, HAL_MAX_DELAY);

	  /* Menú */
	  char buff=0;
	  transmit_uart("\r\n===== Menu ===== \r\n");
	  transmit_uart("1) Controlar dispositivo SPI \r\n");
	  transmit_uart("2) Obtener medicion de Sensor I2C \r\n");
	  transmit_uart("Seleccione opcion \r\n");
	  do {
	      HAL_UART_Receive(&huart2, (uint8_t*)&buff, 1, HAL_MAX_DELAY);
	  }

	  while (buff == '\r' || buff == '\n');

	  //HAL_UART_Receive(&huart2, (uint8_t*)&buff, 1, HAL_MAX_DELAY);

	  /*Opción 1: Control SPI  */
	  if (buff == '1') {
	      transmit_uart("Comunicacion SPI \r\n");
	      transmit_uart("Escriba el comando como: LED,TIEMPO (ej: 1,200)\r\n");

	      char comando[32] = {0};
	      HAL_Delay(2);
	      __HAL_UART_FLUSH_DRREGISTER(&huart2);
	      uart_readline(comando, sizeof(comando));
	      transmit_uart("Comando recibido: ");
	      transmit_uart(comando);
	      transmit_uart("\r\n");

	      uint8_t led = 0;
	      uint16_t tiempo = 0;
	      uint8_t i = 0;

	      // Saltar espacios antes del número
	      while (comando[i] == ' ') i++;

	      // Primer número (LED)
	      while (comando[i] >= '0' && comando[i] <= '9') {
	          led = led * 10 + (comando[i] - '0');
	          i++;
	      }

	      // Saltar espacios y coma
	      while (comando[i] == ' ') i++;
	      if (comando[i] == ',') i++;
	      while (comando[i] == ' ') i++;

	      // Segundo número (TIEMPO)
	      while (comando[i] >= '0' && comando[i] <= '9') {
	          tiempo = tiempo * 10 + (comando[i] - '0');
	          i++;
	      }

	      /* Debug */
	      char txt[60];
	      sprintf(txt, "Valor obtenido: led=%d  tiempo=%d\r\n", led, tiempo);
	      transmit_uart(txt);


	      if (led >= 1 && led <= 3 && tiempo >= 10 && tiempo <= 5000) {  /* Condiciones para LED y tiempo */

	    	  /* Bytes para guardar datos */
	          uint8_t frame[3];
	          frame[0] = led;
	          frame[1] = (uint8_t)(tiempo & 0xFF);
	          frame[2] = (uint8_t)(tiempo >> 8);

	          /* Comunicación SPI */
	          HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_RESET);
	          HAL_SPI_Transmit(&hspi1, frame, 3, HAL_MAX_DELAY);
	          HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_SET);

	          transmit_uart("Comando enviado.\r\n");  /* Asegurarse que el comando se haya enviado */

	      }
	      else {
	          transmit_uart("ERROR: Formato o rangos invalidos. Usa: 1,500, 2,1500, 3,400 \r\n");  /* Dato recibido no es válido */
	          transmit_uart(comando);

	      }
	  }


	  /*Opción 2: Comunicación I2C  */
	  if (buff == '2') {
	      transmit_uart("Comunicacion I2C \r\n");

	      if (HAL_I2C_Master_Receive(&hi2c1, deviceAddress << 1, RX_I2C, 1, 5) == HAL_OK) {
	          HAL_Delay(2); //Delay para que onRequest lea el valor actual del pot
	          HAL_I2C_Master_Receive(&hi2c1, deviceAddress << 1, RX_I2C, 1, 5);

	          char texto[60];
	          sprintf(texto, "Valor ADC recibido: %u\r\n", RX_I2C[0]);  /* Mostrar valor del pot */
	          transmit_uart(texto);
	      }
	      else {
	    	  transmit_uart("ERROR I2C (no ACK)\r\n");
	      }
	      }



    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 16;
  RCC_OscInitStruct.PLL.PLLN = 336;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV4;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
}

